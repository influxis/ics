<h1>Editing item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :associatedUserID %><br />
    <%= f.text_field :associatedUserID %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.label :collectionName %><br />
    <%= f.text_field :collectionName %>
  </p>
  <p>
    <%= f.label :itemID %><br />
    <%= f.text_field :itemID %>
  </p>
  <p>
    <%= f.label :nodeName %><br />
    <%= f.text_field :nodeName %>
  </p>
  <p>
    <%= f.label :publisherID %><br />
    <%= f.text_field :publisherID %>
  </p>
  <p>
    <%= f.label :recipientID %><br />
    <%= f.text_field :recipientID %>
  </p>
  <p>
    <%= f.label :timeStamp %><br />
    <%= f.text_field :timeStamp %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>